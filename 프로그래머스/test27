using System;

public class Solution {
    public int[] solution(long n) {
        string p = n.ToString();
        int[] answer = new int[p.Length];
        for(int i=0; i<p.Length; i++)
        {
            answer[i] = Int32.Parse(p.Substring(i,1));
        }
        Array.Reverse(answer);
        return answer;
    }
}
